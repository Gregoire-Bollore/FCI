<h2 class="top-title"><%= t(".change_your_password") %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs container">
    <div class="row">
      <div class="col-sm-offset-3 col-xs-12 col-sm-6"><%= f.input :password, label: false, required: true, , placeholder: t(".new_password"), autofocus: true %></div>
    </div>
    <div class="row">
      <div class="col-sm-offset-3 col-xs-12 col-sm-6"><%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true %></div>
    </div>
  </div>

  <div class="form-actions container">
    <div class="row">
      <div class="col-xs-12 text-center"><%= f.button :submit, t(".change_my_password"), class: 'btn-navbar-sign-up', style: 'margin: 20px 0 20px 0;' %></div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center"><%= render "devise/shared/links" %></div>
  </div>
</div>
