<h2 style="text-align: center; margin-bottom: 40px; margin-top: 40px;"><%= t(".forgot_your_password") %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container">
    <div class="row">
      <div class="col-sm-offset-3 col-xs-12 col-sm-6">
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
      </div>
    </div>
  </div>

  <div class="form-actions container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <%= f.button :submit, t(".send_me_reset_password_instructions"), class: 'btn-navbar-sign-up', style: 'min-width: 212px !important; max-width: 318px !important; margin: 20px 0px 20px 0px; font-weight: lighter' %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-12 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
