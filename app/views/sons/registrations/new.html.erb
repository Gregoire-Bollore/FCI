<h2 class="top-title" style="text-align: center; margin-bottom: 40px; margin-top: 40px;">Inscription en tant que "Fils du Cœur Immaculé"</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container">

    <div class="row">
      <div class="col-xs-6"><%= f.input :first_name, required: true, autofocus: true, placeholder: "Prénom", label: false %></div>
      <div class="col-xs-6"><%= f.input :last_name, required: true, placeholder: "Nom de famille – Ne sera pas communiqué", label: false %></div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6"><%= f.input :email, required: true, placeholder: "Email", label: false %></div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6"><%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), placeholder: "Mot de passe", label: false %></div>
      <div class="col-xs-12 col-sm-6"><%= f.input :password_confirmation, required: true, placeholder: "Confirmation du mot de passe", label: false %></div>
    </div>

    <div class="row">
      <div class="col-xs-6 date-flexbox">
        <div style="color: #999999;">Date d'ordination :</div>
        <div><%= f.input :ordination_date, :as => :date, :start_year => Date.today.year,
    :end_year => 1900, :order => [ :day, :month, :year], :required => true, label: false %></div>
      </div>
      <div class="col-xs-6" style="color: #999999;">Vous êtes :<%= f.input :level, :collection => ["Prêtre","Diacre"], :as => :radio_buttons, :checked =>"Prêtre", :item_wrapper_class => 'inline', label: false %></div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6"><%= f.input :address, input_html: { id: 'user_input_autocomplete_address', class: 'form-control' }, placeholder: 'Commencez à taper votre adresse', label: false %></div>
      <div class="col-xs-6"><%= f.input :postal_code, input_html: { id: 'postal_code', class: 'form-control' }, placeholder: 'Code postal', label: false, readonly: true %></div>
      <div class="col-xs-6"><%= f.input :locality, input_html: { id: 'locality', class: 'form-control' }, placeholder: 'Ville', label: false, readonly: true %></div>
    </div>

    <div class="row ">
      <div class="col-xs-offset-3 col-xs-6">
        <%= f.input :bio, required: true, placeholder: "Petite présentation rapide", label: false %>
      </div>
    </div>

    <div class="hidden" >
      <%= f.input :street_number, input_html: { id: 'street_number', class: 'form-control' } %>
      <%= f.input :route, input_html: { id: 'route', class: 'form-control' } %>
      <%= f.input :administrative_area_level_1, input_html: { id: 'administrative_area_level_1', class: 'form-control' } %>
      <%= f.input :country, input_html: { id: 'country', class: 'form-control' }, as: 'string' %>
    </div>

  </div>

  <div class="form-actions container">
    <div class="row">
      <div class="col-xs-12 text-center"><%= f.button :submit, "S'inscrire", class: 'btn-navbar-sign-up', style: 'margin: 20px 0 20px 0;' %></div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center"><%= render "sons/shared/links" %></div>
    </div>
  </div>
<% end %>
<%= javascript_include_tag 'autocomplete' %>
